<!DOCTYPE html>
<html>
<head>
  <title>Draftplay</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="page-wrap">
    <div class="top box box-12">
      <% if user_signed_in? %>
      <nav class="menu">
        <ul>
          <li>Signed in as: <%= current_user.username %></li>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </nav>
      <% else %>
      <nav class="menu">
        <ul>
          <li><%= link_to "Sign In", new_user_session_path %></li>
          <li><%= link_to "Register", new_user_registration_path %></li>
        </ul>
      </nav>
      <% end %>
    </div>

    <div class="mid box box-4">
      <div class="panel">
        <img class="logo-img" src="http://i.imgur.com/YQVhwzl.png">
      </div>
    </div>

    <div class="mid box box-4">
      <div class="panel">
        <!--     <img class="logo2-img" src="http://www.fantasyfootballgeek.co.uk/wp-content/uploads/2014/12/giroud.png"> -->
      </div>
    </div>

    <div class="mid box box-4">
      <div class="panel">
      </div>
    </div>

    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span> 
          </button>

        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Leagues", fantasy_leagues_path %></li>
            <li><%= link_to "Transfers", fantasy_team_players_path %></li>
            <li><%= link_to "Fixtures", fixtures_path %></li>
            <li><%= link_to "Help", "https://upload.wikimedia.org/wikipedia/commons/4/4c/Tangerine_2009-03-11.jpg" %></li>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  </div>
  <footer class="site-footer">
  </footer>
</body>
</html>