<!DOCTYPE html>
<html>
<head>
  <title>Draftplay</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="topbanner">
    <% if user_signed_in? %>
    <nav class="logged-in">
      <ul>
        <li class="btn"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
      </ul>
    </nav>
    <% else %>
  <nav class="logged-out">
    <ul>
      <li class="btn"><%= link_to "Sign In", new_user_session_path %></li>
      <li class="btn"><%= link_to "Register", new_user_registration_path %></li>
    </ul>
  </nav>
<% end %>
</div>

<%= yield %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
</body>
</html>
